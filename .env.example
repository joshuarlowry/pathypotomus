# Required Configuration
# ===================

# Origin and destination addresses for route planning
ORIGIN_ADDR="123 Main St, Springfield, IL"
DEST_ADDR="456 Oak Ave, Shelbyville, IL"

# Optional Configuration
# ====================

# OSRM server URL (defaults to public demo server)
OSRM_URL="https://router.project-osrm.org"

# LLM API configuration
LLM_API_KEY="your-api-key-here"
LLM_MODEL="gpt-3.5-turbo"
LLM_PROVIDER="openai"

# Output configuration
OUTPUT_PATH="./output/routes.html"
OUTPUT_TITLE="Route Options"

# Application settings
LOG_LEVEL="INFO"
ENABLE_DEBUG_MODE=false
MAX_ROUTES=3
REQUEST_TIMEOUT=30

# Development settings (for .env.dev)
# ==================================
# LOG_LEVEL="DEBUG"
# ENABLE_DEBUG_MODE=true
# OUTPUT_PATH="./dev-output/routes.html"